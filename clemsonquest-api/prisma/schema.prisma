generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Organization {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  users  User[]
  teams  Team[]
  quests Quest[]
}

model Team {
  id             Int           @id @default(autoincrement())
  name           String
  color          String        @default("#FF6F00")
  organization   Organization  @relation(fields: [organizationId], references: [id])
  organizationId Int

  users          User[]
}

model User {
  id             Int           @id @default(autoincrement())
  cuid           String        @unique
  firstName      String
  lastName       String
  email          String        @unique
  role           UserRole      @default(USER)
  createdAt      DateTime      @default(now())

  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId Int?

  team           Team?         @relation(fields: [teamId], references: [id])
  teamId         Int?

  submissions    Submission[]
}

model Quest {
  id             Int           @id @default(autoincrement())
  title          String
  description    String
  startTime      DateTime
  endTime        DateTime

  organization   Organization  @relation(fields: [organizationId], references: [id])
  organizationId Int

  submissions    Submission[]
}

model Submission {
  id        Int               @id @default(autoincrement())
  imageUrl  String
  status    SubmissionStatus  @default(PENDING)
  aiReason  String?

  createdAt DateTime @default(now())

  user      User   @relation(fields: [userId], references: [id])
  userId    Int

  quest     Quest  @relation(fields: [questId], references: [id])
  questId   Int
}

enum UserRole {
  ADMIN
  ORG
  USER
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}